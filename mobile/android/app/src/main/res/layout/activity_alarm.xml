<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alarm_background_gradient"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/alarmIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â°"
            android:textSize="80sp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/alarmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/alarmSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time's up!"
            android:textColor="#aaaaaa"
            android:textSize="18sp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/alarmContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#d1d5db"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="16dp"
            android:background="#2a2a3e"
            android:layout_marginBottom="32dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Stop Alarm"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/snoozeButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Snooze"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="#FF555577"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>

